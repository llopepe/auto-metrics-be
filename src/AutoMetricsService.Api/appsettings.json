{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/AutoMetrics-Log-Development-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "PNet AuthCore App"
    }
  },
  "ApiRequestPolicy": {
    "Timeout": 1200000,
    "MaxRetries": 3
  },
  "JwtSettings": {
    "Key": "AutoMetricsSuperSecretKey2025!SecureKey#",
    "Issuer": "AutoMetrics",
    "Audience": "AutoMetricsUsers",
    "ExpirationInMinutes": 15
  }

}
